<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.puC.super42.MenuActivity"
    android:background="@drawable/menu2">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/new_game"
        android:src="@drawable/newgame42"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/highscores"
        android:src="@drawable/highscores2"
        android:layout_alignTop="@+id/new_game"
        android:layout_toRightOf="@+id/new_game"
        android:layout_toEndOf="@+id/new_game" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/challenges"
        android:src="@drawable/challenges2"
        android:layout_below="@+id/new_game"
        android:layout_toLeftOf="@+id/highscores"
        android:layout_toStartOf="@+id/highscores" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/help"
        android:layout_alignTop="@+id/challenges"
        android:layout_toRightOf="@+id/challenges"
        android:layout_toEndOf="@+id/challenges"
        android:src="@drawable/help2" />

</RelativeLayout>
