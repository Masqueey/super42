<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.puC.super42">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />

    <activity
        android:name="com.example.puC.super42.StartUp"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="com.example.puC.super42.MenuActivity"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden">

        <intent-filter>
            <action android:name="android.intent.action.MenuActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>
    <activity
        android:name="com.example.puC.super42.GameOver"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden"></activity>

    <activity
        android:name="com.example.puC.super42.Challenges"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden"></activity>

    <activity
        android:name="com.example.puC.super42.Highscores"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden" />

    <activity
        android:name="com.example.puC.super42.Help"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden"></activity>

</manifest>